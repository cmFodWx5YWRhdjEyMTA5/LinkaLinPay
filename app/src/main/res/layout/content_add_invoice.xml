<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/customername"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                />


            <EditText
                android:id="@+id/customername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dip"
                android:background="@drawable/rect2"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/customername"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#666"
                android:fontFamily="@font/candarafont"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/email"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"

                />


            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dip"
                android:background="@drawable/rect2"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#666"
                android:fontFamily="@font/candarafont"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/phone"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"


                />


            <EditText
                android:id="@+id/mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dip"
                android:background="@drawable/rect2"
                android:inputType="number"
                android:hint="@string/phone"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#666"
                android:fontFamily="@font/candarafont"
                android:layout_marginTop="@dimen/_10sdp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/currency"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"

                />



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="35sp"
              android:background="@drawable/rect2"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:padding="5dip"
              android:layout_marginTop="@dimen/_10sdp"
              >

              <Spinner
                  android:id="@+id/currency"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_35sdp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:padding="5dip"

                  android:background="@drawable/spinner_bg"
                  />

          </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/payableamt"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"

                />


            <EditText
                android:id="@+id/payableamnt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dip"
                android:background="@drawable/rect2"
                android:inputType="number"
                android:hint="@string/payableamt"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#666"
                android:fontFamily="@font/candarafont"
               android:layout_marginTop="@dimen/_10sdp"
                />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="#34495F"
                android:text="@string/description"
                android:gravity="left"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"

                />


            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dip"
                android:background="@drawable/rect2"
                android:inputType="textMultiLine"
                android:hint="@string/description"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#666"
                android:fontFamily="@font/candarafont"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_150sdp"

                >

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_below="@+id/il_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:background="#72C5C9"
                    android:textStyle="bold"
                    android:fontFamily="@font/candarafont"
                    />


            </RelativeLayout>



        </LinearLayout>





    </LinearLayout>
</androidx.core.widget.NestedScrollView>