<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    android:orientation="vertical"
    tools:context=".activity.BusinessSignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subtitleTextAppearance="@style/RobotoTextViewStyle"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/signup" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:textSize="14sp"
        android:textColor="@color/color_black"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/candarafont"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/tellus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_user" />

        <View
            android:layout_width="0.8dp"
            android:layout_margin="5dp"
            android:background="@color/color_light"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/edt_fullname"
            android:hint="@string/fullname"
            android:textSize="14sp"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:background="@color/color_bgblue"
            android:textColor="@color/color_blue"
            android:textColorHint="@color/color_blue"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_mail" />

        <View
            android:layout_width="0.8dp"
            android:layout_margin="5dp"
            android:background="@color/color_light"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/edt_email"
            android:hint="@string/email"
            android:textSize="14sp"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_bgblue"
            android:textColor="@color/color_blue"
            android:textColorHint="@color/color_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/mobile" />

            <View
                android:layout_width="0.8dp"
                android:layout_margin="5dp"
                android:background="@color/color_light"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/edt_mobile"
                android:hint="@string/phone"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:padding="5dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:background="@color/color_bgblue"
                android:textColor="@color/color_blue"
                android:textColorHint="@color/color_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/lock" />

            <View
                android:layout_width="0.8dp"
                android:layout_margin="5dp"
                android:background="@color/color_light"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/edt_password"
                android:hint="@string/password"
                android:textSize="14sp"
                android:padding="5dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="textPassword"
                android:background="@color/color_bgblue"
                android:textColor="@color/color_blue"
                android:textColorHint="@color/color_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/lock" />

            <View
                android:layout_width="0.8dp"
                android:layout_margin="5dp"
                android:background="@color/color_light"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/edt_c_password"
                android:hint="@string/cpass"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:background="@color/color_bgblue"
                android:textColor="@color/color_blue"
                android:textColorHint="@color/color_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:id="@+id/businesstype"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/type_of_business" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/color_light" />


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/color_bgblue"
            android:spinnerMode="dropdown"/>
<!--        <EditText-->
<!--            android:id="@+id/business_type"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/color_bgblue"-->
<!--            android:fontFamily="@font/candarafont"-->
<!--            android:padding="5dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:hint="@string/typeofbusiness"-->
<!--            android:focusable="false"-->
<!--            android:singleLine="true"-->
<!--            android:textColor="@color/color_blue"-->
<!--            android:textColorHint="@color/color_blue"-->
<!--            android:textSize="14sp"-->
<!--            android:layout_marginRight="@dimen/_5sdp"-->
<!--            android:drawableRight="@drawable/dropdrown"-->

<!--            />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:src="@drawable/business_name" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/color_light" />

        <EditText
            android:id="@+id/edt_businessname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bgblue"
            android:fontFamily="@font/candarafont"
            android:hint="@string/businessname"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_blue"
            android:textColorHint="@color/color_blue"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/_5sdp"
            />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_weight=".1"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/instagram_name" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/color_light" />

        <EditText
            android:id="@+id/edt_insta_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_bgblue"
            android:hint="@string/instagramname"
            android:layout_weight="2.6"
            android:fontFamily="@font/candarafont"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/color_blue"
            android:textColorHint="@color/color_blue"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/verify"
            android:background="@drawable/btn1"
            android:text="@string/Verify"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_weight=".3"
            android:fontFamily="@font/candarafont"
            android:textColor="@color/color_white"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/instagram_name" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/color_light" />

        <Spinner
            android:id="@+id/countrylist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/color_blue"
            android:textColorHint="@color/color_blue"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/_5sdp"
            />


    </LinearLayout>





    <Button
        android:id="@+id/next"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn1"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/candarafont"
        android:textColor="@color/color_white"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/alreadyhaveacc"
            android:fontFamily="@font/candarafont"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/login"
            android:fontFamily="@font/candarafont"
            android:textColor="@color/color_dark"
            android:textSize="16sp" />

    </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>