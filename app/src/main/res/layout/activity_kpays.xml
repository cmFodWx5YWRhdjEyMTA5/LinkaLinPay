<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Kpays">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo"
                android:layout_alignParentBottom="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/businessname"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/candarafont"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:text="linkaline"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/orderdtailbackground2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/firstNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/storeurl"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/color_black"
                android:fontFamily="@font/candarafont"
                />
            <TextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://linkalinpay.com/"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editurl"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/color_black"
                    android:fontFamily="@font/candarafont"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:text="https://kpays.me/"
                        android:layout_below="@+id/firstNameTv"
                        android:textSize="13sp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:id="@+id/edit_url"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="url"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:background="@drawable/edittextbg"
                        />

                    <Button
                        android:id="@+id/update"
                        android:background="@drawable/btn1"
                        android:text="@string/update"
                        android:layout_marginRight="5dp"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:layout_weight=".6"
                        android:fontFamily="@font/candarafont"
                        android:textColor="@color/color_white"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="40dp"/>


                </LinearLayout>
                <Button
                    android:background="@drawable/btn1"
                    android:text="@string/sharestoreurl"
                    android:id="@+id/share"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/candarafont"
                    android:textColor="@color/color_white"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_baseline_share_24"
                    android:layout_width="170dp"
                    android:layout_height="40dp"/>
            </LinearLayout>







        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>