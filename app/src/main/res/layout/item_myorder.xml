<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orderdtailbackground"
        android:orientation="horizontal"
        android:weightSum="2"

        >

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="60dp"
            android:background="@drawable/calenderbg"
            android:fontFamily="@font/candarafont"
            android:gravity="center"
            android:text="21JUL 2020"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/delete_iv"
                        android:text="@string/orderstatus"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/candarafont"
                        />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/title"
                        android:ellipsize="end"
                        android:text="Completed"
                        android:textSize="16dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#666"
                        android:fontFamily="@font/candarafont"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/delete_iv"
                        android:text="Order# "
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/candarafont"
                        />

                    <TextView
                        android:id="@+id/orderid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/title"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="123-456-780"
                        android:textSize="16dp"

                        />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/delete_iv"
                        android:textStyle="bold"
                        android:text="Total Amount"
                        android:textSize="16dp"
                        android:fontFamily="@font/candarafont"
                        />

                    <TextView
                        android:id="@+id/totalamnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/title"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="KWD799.00"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="@drawable/vieworder"
                        android:id="@+id/vieworder"
                        android:layout_marginLeft="@dimen/_5sdp"

                        />
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:background="@drawable/trackorderr"
                        android:id="@+id/trackorder"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        />


                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>
<!--        <ImageView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_gravity="right"-->
<!--            android:layout_weight=".3"-->
<!--            android:layout_height="100dp"-->
<!--            android:background="@drawable/reorder"-->

<!--            />-->


    </LinearLayout>


</LinearLayout>
