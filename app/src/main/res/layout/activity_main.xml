<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_1"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/us"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="3"
            android:onClick="langchange"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="40dp"
                android:id="@+id/langimg"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/usa" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:text="ENGLISH"
                android:id="@+id/lang"
                android:paddingRight="5dp"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:tint="@color/color_black"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/l_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/light_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/owner" />

            <TextView
                android:text="@string/businessowner"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/candarafont"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_shopper"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/light_bg"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:src="@drawable/shoppers"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>

            <TextView
                android:text="@string/shopper"
                android:padding="5dp"
                android:fontFamily="@font/candarafont"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>